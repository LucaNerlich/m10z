{
    "kind": "collectionType",
    "collectionName": "categories",
    "info": {
        "singularName": "category",
        "pluralName": "categories",
        "displayName": "Category"
    },
    "options": {
        "draftAndPublish": false
    },
    "pluginOptions": {},
    "attributes": {
        "base": {
            "type": "component",
            "component": "collection-type.base-content",
            "repeatable": false,
            "required": true
        },
        "slug": {
            "type": "uid",
            "required": true
        },
        "articles": {
            "type": "relation",
            "relation": "manyToMany",
            "target": "api::article.article",
            "mappedBy": "categories"
        },
        "podcasts": {
            "type": "relation",
            "relation": "manyToMany",
            "target": "api::podcast.podcast",
            "inversedBy": "categories"
        }
    }
}
