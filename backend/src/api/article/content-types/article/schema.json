{
    "kind": "collectionType",
    "collectionName": "articles",
    "info": {
        "singularName": "article",
        "pluralName": "articles",
        "displayName": "Article"
    },
    "options": {
        "draftAndPublish": true
    },
    "pluginOptions": {},
    "attributes": {
        "base": {
            "type": "component",
            "component": "collection-type.base-content",
            "repeatable": false,
            "required": true
        },
        "slug": {
            "type": "uid",
            "required": true
        },
        "content": {
            "type": "richtext",
            "required": true
        },
        "authors": {
            "type": "relation",
            "relation": "manyToMany",
            "target": "api::author.author",
            "inversedBy": "articles"
        },
        "categories": {
            "type": "relation",
            "relation": "manyToMany",
            "target": "api::category.category",
            "inversedBy": "articles"
        }
    }
}
