{
  "kind": "collectionType",
  "collectionName": "podcasts",
  "info": {
    "singularName": "podcast",
    "pluralName": "podcasts",
    "displayName": "Podcast"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "base": {
      "type": "component",
      "component": "collection-type.base-content",
      "repeatable": false,
      "required": true
    },
    "slug": {
      "type": "uid",
      "required": true
    },
    "file": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "audios"
      ]
    },
    "duration": {
      "type": "integer",
      "required": true,
      "min": 1
    },
    "shownotes": {
      "type": "richtext"
    },
    "authors": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::author.author",
      "mappedBy": "podcasts"
    },
    "categories": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::category.category",
      "mappedBy": "podcasts"
    },
    "publishDate": {
      "type": "datetime",
      "required": true
    }
  }
}
